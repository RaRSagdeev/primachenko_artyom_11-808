@model List<LetterPreview>
@{
    ViewData["Title"] = "ListMessages";
}

<p>@ViewData["MessageType"]</p>
<div class="list-group">
    <input type="checkbox" name="selectall" />
    <ul>
       @foreach (var prev in Model)
        {
        <li>
            <input type="checkbox" name="select"/>
            <a class="nav-link text-dark border-bottom"
                asp-area=""
                asp-controller="Letter"
                asp-action="Index"
                asp-route-id="@prev.Id">
                @prev.Title
            </a>
        </li>
        }
    </ul>
</div>
